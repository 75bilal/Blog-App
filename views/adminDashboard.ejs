<!DOCTYPE html>
<html lang="en">
<head>
 <%- include('./partials/head') %>
  <title>home Page</title>
  <style>
   h1 {
      margin-top: 4px;
      text-align: center;
    }
    </style>
</head>
<body>
  <%- include('./partials/navbar') %>
  <h1>Welcome to Blog App</h1>

   <h4 class="container">Users</h4>
  <h2 class="container">Admin Dasboad</h2>
  <table class="table table-bordered container  table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
   
  <h4 class="container">Blogs</h4>
  <% if (locals.blogs) { %>
  <div class="container mt-3">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
       
      <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card ">
            <img class="card-img-top" src="<%= blog.coverImage %>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View content</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <% } %>
  


<%- include('./partials/script') %>
</body>
</html>
